<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.barlocalizer" android:versionCode="1" android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/application_name">
		<activity android:name="com.barlocalizer.screens.CountDownActivity"
			android:label="@string/application_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<service android:name="com.barlocalizer.services.StatusNotificationService" /> 

		<uses-library android:name="com.google.android.maps" />

	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest> 